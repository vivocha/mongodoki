{
  "name": "mongodoki",
  "version": "0.0.0-development",
  "description": "A tool to on-the-fly run MongoDB as a Docker Container, data restoring included",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "mongodoki": "dist/bin.js"
  },
  "directories": {
    "test": "./test"
  },
  "scripts": {
    "clean": "rimraf dist coverage .nyc_output",
    "clean:all": "npm run clean && rimraf node_modules",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "precommit": "npm run build && npm run cover && npm run check-coverage && rimraf test/testdb",
    "commit": "git-cz",
    "check-coverage": "./node_modules/.bin/nyc check-coverage --statements 94 --branches 85 --functions 100 --lines 95",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "watch:test": "npm t -- -w",
    "test": "mocha --no-timeouts test/*.test.js",
    "test:debug": "npm run build && tsc -p test && mocha --inspect-brk --recursive test/**/*.test.js",
    "cover": "npm run build && ./node_modules/.bin/nyc --reporter=lcov --reporter=text npm t",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vivocha/mongodoki.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Antonio Pintus <apintus@vivocha.com> (http://www.vivocha.com)",
  "license": "MIT",
  "keywords": [
    "Docker",
    "MongoDB",
    "Containers"
  ],
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "7.1.0",
    "@types/chai-spies": "0.0.0",
    "@types/dockerode": "^2.5.0",
    "@types/mocha": "^2.2.43",
    "@types/mongodb": "^2.2.11",
    "@types/node": "^8.0.28",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^0.7.1",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^7.0.2",
    "typescript": "^2.5.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/commander": "^2.9.2",
    "@types/debug": "0.0.30",
    "@types/ora": "^1.3.1",
    "commander": "^2.11.0",
    "debug": "^3.0.1",
    "dockerode": "^2.5.1",
    "mongodb": "^2.2.31",
    "ora": "^1.3.0"
  }
}
