{
  "name": "mongodoki",
  "version": "0.0.0-development",
  "description": "A little utility to on-the-fly run MongoDB as a Docker Container",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "mongodoki": "dist/bin.js"
  },
  "directories": {
    "test": "./test"
  },
  "scripts": {
    "clean": "rimraf dist coverage .nyc_output",
    "clean:all": "npm run clean && rimraf node_modules",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "precommit": "npm run build && npm run cover && npm run check-coverage && rimraf test/testdb",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 95 --branches 94 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "watch:test": "npm t -- -w",
    "test": "mocha --no-timeouts test/*.test.js",
    "cover": "nyc --reporter=lcov --reporter=text npm t",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vivocha/mongodoki.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Antonio Pintus <apintus@vivocha.com> (http://www.vivocha.com)",
  "license": "MIT",
  "keywords": [
    "Docker",
    "MongoDB",
    "Containers"
  ],
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/chai-as-promised": "0.0.30",
    "@types/chai-spies": "0.0.0",
    "@types/dockerode": "^2.4.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.22",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-spies": "^0.7.1",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "mocha": "^3.4.1",
    "nyc": "^10.3.2",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6",
    "typescript": "^2.3.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/commander": "^2.9.0",
    "@types/debug": "0.0.29",
    "@types/mongodb": "^2.2.2",
    "@types/ora": "^0.3.31",
    "commander": "^2.9.0",
    "debug": "^2.6.8",
    "dockerode": "^2.4.3",
    "mongodb": "^2.2.27",
    "ora": "^1.2.0"
  }
}
